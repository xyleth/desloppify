[importlinter]
root_package = desloppify

[importlinter:contract:engine-no-languages]
name = Engine detectors cannot import language plugins
type = forbidden
source_modules =
    desloppify.engine.detectors
forbidden_modules =
    desloppify.languages

[importlinter:contract:engine-no-review]
name = Engine detectors cannot import review/intelligence
type = forbidden
source_modules =
    desloppify.engine.detectors
forbidden_modules =
    desloppify.intelligence.review

[importlinter:contract:narrative-no-commands]
name = Narrative cannot import app commands
type = forbidden
source_modules =
    desloppify.intelligence.narrative
forbidden_modules =
    desloppify.app.commands
